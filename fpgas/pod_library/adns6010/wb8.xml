<?xml version="1.0" encoding="utf-8"?>
<component name="adns6010" version="1.0">
	<description>
		ADNS6010 device driving 3 ADNS6010 optical encoders
	</description>

    <generics>
        <generic name="id" public="true" value="1" match="\d+" destination="both" type="natural" />
        <generic name="wb_size_c" public="false" value="8" match="\d+" destination="fpga" type="natural" />
    </generics>

	<hdl_files>
    <hdl_file filename="hdl/top_adns6010.vhd" scope="all" istop="1" />
    <hdl_file filename="hdl/adns6010_controlunit.vhd" scope="all" istop="0"/>
    <hdl_file filename="hdl/adns6010_latch_nbits.vhd" scope="all" istop="0"/>
    <hdl_file filename="hdl/adns6010_mode_mux.vhd" scope="all" istop="0"/>
    <hdl_file filename="hdl/adns6010_spi.vhd" scope="all" istop="0"/>
    <hdl_file filename="hdl/adns6010_wishbone_interface.vhd" scope="all" istop="0"/>
	</hdl_files>

	<interfaces>

		<interface name="clock" class="CLK_RST">
			<ports>
				<port name="wbs_clk_i" type="CLK" size="1" dir="in"/>
				<port name="wbs_rst_i" type="RST" size="1" dir="in"/>
			</ports>
		</interface>

    <interface name="swb8" class="SLAVE" bus="wishbone8" clockandreset="clock">
			<ports>
				<port name="wbs_adr_i" type="ADR" size="6" dir="in"/>
				<port name="wbs_dat_i" type="DAT_I" size="8" dir="in"/>
				<port name="wbs_dat_o" type="DAT_O" size="8" dir="out"/>
				<port name="wbs_we_i" type="WE" size="1" dir="in"/>
				<port name="wbs_stb_i" type="STB" size="1" dir="in"/>
        <port name="wbs_cyc_i" type="CYC" size="1" dir="in"/>
				<port name="wbs_ack_o" type="ACK" size="1" dir="out"/>
			</ports>
		</interface>

    <interface name="adns_spi">
        <ports>
            <port name="mosi_o" type="EXPORT" size="1" dir="out"/>
            <port name="miso_i" type="EXPORT" size="1" dir="in"/>
            <port name="sck_o"  type="EXPORT" size="1" dir="out"/>
            <port name="cs1_no" type="EXPORT" size="1" dir="out"/>
            <port name="cs2_no" type="EXPORT" size="1" dir="out"/>
            <port name="cs3_no" type="EXPORT" size="1" dir="out"/>

            <port name="adns_reset_o" type="EXPORT" size="1" dir="out"/>
        </ports>
		</interface>
	</interfaces>

</component>
